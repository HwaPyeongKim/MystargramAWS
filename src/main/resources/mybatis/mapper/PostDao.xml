<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.himedia.gram.dao.IPostDao">

    <insert id="insert" parameterType="com.himedia.gram.dto.PostDto" useGeneratedKeys="true" keyProperty="id">
        insert into post (writer, content, image) values (#{writer}, #{content}, #{image})
    </insert>

    <select id="getHashtag" resultType="com.himedia.gram.dto.HashDto">
        select * from hashtag where word = #{tag}
    </select>

    <insert id="insertHash">
        insert into hashtag (word) values (#{tag})
    </insert>

    <insert id="insertHashPost">
        insert into hashpost (postid, hashtagid) values (#{postid}, #{hashid})
    </insert>

    <select id="getAllCountPost" resultType="_int">
        select count(*) from post
    </select>

    <select id="select" resultType="com.himedia.gram.dto.PostDto">
        select * from view_post limit #{displayRow} offset #{startNum}
    </select>

    <select id="selectPost" resultType="com.himedia.gram.dto.PostDto">
        select * from view_post where writer = #{writer}
    </select>

    <select id="selectLike" resultType="com.himedia.gram.dto.LikeDto">
        select * from likes where memberid = #{memberid} and postid = #{postid}
    </select>

    <insert id="addLike">
        insert into likes (memberid, postid) values (#{memberid}, #{postid})
    </insert>

    <delete id="deleteLike">
        delete from likes where memberid = #{memberid} and postid = #{postid}
    </delete>

    <select id="selectFollow" resultType="com.himedia.gram.dto.FollowDto">
        select * from follow where start = #{memberid} and end = #{writer}
    </select>

    <insert id="addFollow">
        insert into follow (start, end) values (#{memberid}, #{writer})
    </insert>

    <delete id="deleteFollow">
        delete from follow where start = #{memberid} and end = #{writer}
    </delete>

    <select id="selectPostid" resultType="_int">
        select postid from hashpost where hashtagid = #{hashid}
    </select>

    <select id="getPost" resultType="com.himedia.gram.dto.PostDto">
        select * from view_post where id = #{postid}
    </select>

    <select id="selectReply" resultType="com.himedia.gram.dto.ReplyDto">
        select * from view_reply where postid = #{id}
    </select>

    <insert id="writeReply" parameterType="com.himedia.gram.dto.ReplyDto">
        insert into reply (memberid, postid, reply) values (#{memberid}, #{postid}, #{reply})
    </insert>

    <delete id="deleteReply">
        delete from reply where id = #{replyid}
    </delete>
</mapper>